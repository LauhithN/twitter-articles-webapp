#!/bin/sh

echo "ðŸ¤– BugBot: Running pre-commit checks..."

# Add common Node.js paths
export PATH="$PATH:./node_modules/.bin:$HOME/anaconda3:$HOME/AppData/Roaming/npm"

# Run lint-staged if available
if command -v npx >/dev/null 2>&1; then
  npx lint-staged || true
fi

# Run custom bug detection
if [ -f scripts/bug-detector.js ]; then
  if command -v node >/dev/null 2>&1; then
    node scripts/bug-detector.js --pre-commit
  fi
fi

echo "âœ… BugBot: Pre-commit checks complete!"
