[MASTER]
# Python version to target
py-version=3.11

# Add files or directories to the blocklist
ignore=venv,env,.venv,node_modules,__pycache__,.git,build,dist

[MESSAGES CONTROL]
# Disable specific warnings/errors
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name
    R0903,  # too-few-public-methods
    W0511,  # fixme (TODOs)
    R0913,  # too-many-arguments

# Enable specific checks
enable=
    F,      # Fatal errors
    E,      # Errors
    W,      # Warnings
    C,      # Convention
    R,      # Refactoring

[FORMAT]
# Maximum line length
max-line-length=120

# Expected indentation
indent-string='    '

[DESIGN]
# Maximum number of arguments for function/method
max-args=7

# Maximum number of attributes for a class
max-attributes=10

# Maximum number of local variables
max-locals=20

# Maximum number of return/yield statements
max-returns=6

# Maximum number of branch statements
max-branches=15

[BASIC]
# Good variable names
good-names=i,j,k,ex,_,id,db,pk,df

# Regular expressions for variable names
variable-rgx=[a-z_][a-z0-9_]{0,30}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
attr-rgx=[a-z_][a-z0-9_]{0,30}$
argument-rgx=[a-z_][a-z0-9_]{0,30}$
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{0,30}|(__.*__))$
method-rgx=[a-z_][a-z0-9_]{0,30}$
function-rgx=[a-z_][a-z0-9_]{0,30}$
class-rgx=[A-Z_][a-zA-Z0-9]+$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$

[IMPORTS]
# Deprecated modules
deprecated-modules=optparse,tkinter.tix

[EXCEPTIONS]
# Exceptions that will emit a warning when caught
overgeneral-exceptions=builtins.Exception
