[flake8]
# Maximum line length
max-line-length = 120

# Error codes to ignore
ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    W503,  # line break before binary operator
    W504,  # line break after binary operator

# Directories to exclude
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    node_modules,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache

# Maximum complexity
max-complexity = 15

# Show source code for each error
show-source = True

# Show pep8 error codes in the output
show-pep8 = True

# Count the number of occurrences of each error/warning
count = True

# Print total number of errors and warnings
statistics = True
